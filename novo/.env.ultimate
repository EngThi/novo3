# PIPELINE ULTIMATE v5.0 - CONFIGURAÇÃO DE PRODUÇÃO
# Copie este arquivo para .env e configure suas chaves

# === GEMINI API KEYS (MÚTIPLAS PARA RATE LIMITING) ===
GEMINI_API_KEY=sua_chave_primaria_aqui
GEMINI_API_KEY_2=sua_chave_backup_1_aqui
GEMINI_API_KEY_3=sua_chave_backup_2_aqui
# Adicione até GEMINI_API_KEY_10 conforme necessário

# === CONFIGURAÇÕES DE TTS ===
TTS_VOICE_PRIMARY=Kore
TTS_VOICE_SECONDARY=Zephyr
TTS_AUTO_SELECT=true
DEFAULT_TTS_LANGUAGE=pt-BR

# === CONFIGURAÇÕES DE VÍDEO ===
DEFAULT_VIDEO_QUALITY=1080p
ENABLE_VIDEO_ASSEMBLY=true
VIDEO_COMPRESSION=medium
ENABLE_GPU_ACCELERATION=false

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS_PER_MINUTE=15
RATE_LIMIT_BURST=3
RATE_LIMIT_TIMEOUT=45000
MAX_CONCURRENT_VIDEOS=3

# === CACHE E PERFORMANCE ===
ENABLE_SMART_CACHE=true
CACHE_TTL_HOURS=168
CACHE_MAX_SIZE=1000
ENABLE_SEMANTIC_CACHE=true

# === QUALITY SCORING ===
QUALITY_THRESHOLD=8.5
AUTO_RETRY_LOW_QUALITY=true
MAX_QUALITY_RETRIES=3

# === MONETIZAÇÃO (OPCIONAL) ===
COMMERCIAL_MODE=false
API_SERVER_PORT=4000
ADMIN_PASSWORD=admin123
ENABLE_BILLING=false

# === INTEGRAÇÕES EXTERNAS ===
# YouTube API (para upload automático)
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=

# Drive API (para backup)
GOOGLE_DRIVE_FOLDER_ID=

# === NOTIFICAÇÕES ===
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false

# === SEGURANÇA ===
AI_CONTENT_FILTER=true
ANTI_SPAM_PROTECTION=true
AUTO_MODERATE_CONTENT=true

# === DESENVOLVIMENTO ===
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_MOCK_MODE=false
PROFILING_ENABLED=false

# === CAMINHOS PERSONALIZADOS ===
OUTPUT_PATH=novo/output
CACHE_PATH=novo/cache
VIDEO_PATH=novo/videos
LOGS_PATH=novo/logs
TEMP_PATH=novo/temp

# === BRAND E CUSTOMIZAÇÃO ===
BRAND_NAME="Pipeline Ultimate"
WATERMARK_TEXT="Criado com Pipeline Ultimate"
CUSTOM_INTRO_DURATION=3
CUSTOM_OUTRO_DURATION=2

# === PERFORMANCE MONITORING ===
METRICS_ENABLED=true
DASHBOARD_PORT=3000
REALTIME_MONITORING=true
PERFORMANCE_ALERTS=true

# === BACKUP E RECOVERY ===
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
AUTO_RECOVERY_ENABLED=true
ERROR_REPORTING=true